{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@test-utils/*": [
        "test/utils/*"
      ],
    }
  },
  "include": [
    "src",
    "test",
    "test/**/*.ts",
    "./*.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
